[
  verbose: false,
  private: false,
  skip: false,
  router: "lib/wrt_web/router.ex",
  exit: "low",
  format: "txt",
  ignore: [
    # CSP is handled at the CDN/reverse proxy level (Fly.io)
    "Config.CSP",
    # HTTPS is handled by Fly.io (TLS termination at edge)
    "Config.HTTPS",
    # Code.eval_file in release.ex uses fixed seed script path, not user input
    "RCE.CodeModule"
  ],
  ignore_files: [
    # File.read in seed_controller reads user-uploaded CSV via Plug.Upload (safe temp path)
    "lib/wrt_web/controllers/org/seed_controller.ex",
    # XSS false positives - send_resp with PDF binary and HTML for export (not user-controlled)
    "lib/wrt_web/controllers/org/export_controller.ex"
  ]
]
